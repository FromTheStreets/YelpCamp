<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">NEW CAMPGROUND</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">TITLE</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>

                    <div class="valid-feedback">
                        Valid
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="loc">LOCATION</label>
                    <input class="form-control" type="text" name="campground[location]" id="loc" required>

                    <div class="valid-feedback">
                        Valid
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="img">IMAGE URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="img" required>

                    <div class="valid-feedback">
                        Valid
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="price">CAMPGROUND PRICE</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required>

                        <div class="valid-feedback">
                            Valid
                        </div>

                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="descp">DESCRIPTION</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="descp"
                        required></textarea>

                    <div class="valid-feedback">
                        Valid
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="images" name="image" multiple >  
                    <label class="input-group-text" for="images">Browse..</label>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">ADD CAMPGROUND</button>
                </div>

            </form>

        </div>
    </div>

    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>